<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.iotacademy.gardenbalcony.MainActivity"
    android:background="#272727">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <HorizontalScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content">




    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"


        >




    <android.support.v7.widget.CardView
        android:id="@+id/graphical"
        android:layout_width="362dp"
        android:layout_height="90dp"
        app:cardBackgroundColor="#b6e8e4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graphical View"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="30dp"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/plant" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/flowers" />

    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/value"
            android:layout_width="362dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="#f4e186"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="110dp"


            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value Dashboard"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="30dp"
                android:textSize="25dp"/>


            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/value_dashboard"
                android:layout_marginLeft="10dp"/>

    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/hybrid"
            android:layout_width="362dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="#87d960"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="310dp"


            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hybrid Dashboard"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="30dp"
                android:textSize="25dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mixed_dashboard"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/error"
            android:layout_width="362dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="#ffb3b5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="410dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error Dashboard"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="30dp"
                android:textSize="25dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hybrid_dashboard"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>


        </android.support.v7.widget.CardView>
        <ImageButton
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notification"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="510dp"
            android:layout_marginStart="10dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/charts"
            android:layout_width="362dp"
            android:layout_height="90dp"

            android:layout_marginLeft="0dp"

            android:layout_marginTop="209dp"
            app:cardBackgroundColor="#c189ec"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="30dp"
                android:text="Chart Dashboard"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/charts" />
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>
    </ScrollView>
</RelativeLayout>