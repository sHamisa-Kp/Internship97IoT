<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#272727">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Notifications"
        android:background="#272727">

        <android.support.v7.widget.CardView

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#272727"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/background"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#272727"
                android:orientation="vertical">


                <FrameLayout
                    android:id="@+id/minweatherhumidity"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:background="#ffffd4"

                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"

                    >

                    <TextView
                        android:id="@+id/tvminhumidity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="23dp"
                        android:src="@drawable/humidity_low" />

                    <ImageButton
                        android:id="@+id/canselminhumidity"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:src="@drawable/cancel" />

                    <!--<ImageButton
                        android:id="@+id/canselminlight"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="-160dp"
                        android:layout_marginTop="-120dp"
                        app:srcCompat="@drawable/drop"/>-->

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/maxweatherhumidity"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_below="@+id/minlight"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#ffffd4"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvmaxhumidity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="23dp"
                        android:src="@drawable/humidity_high" />

                    <ImageButton
                        android:id="@+id/canselmaxhumidity"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:src="@drawable/cancel" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/maxairtemperature"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_below="@+id/maxlight"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#bde4fc"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvmaxtemperature"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="23dp"
                        android:src="@drawable/minairhumidity" />

                    <ImageButton
                        android:id="@+id/canselmaxairtemperature"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:src="@drawable/cancel" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/minairtemperature"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_below="@+id/minairhumidity"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#bde4fc"
