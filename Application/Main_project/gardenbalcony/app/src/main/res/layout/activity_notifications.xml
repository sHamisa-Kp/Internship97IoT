                    <ImageButton
                        android:id="@+id/canselfloormoisture"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:src="@drawable/cancel" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/motiondetect"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_below="@+id/floormoisture"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#ddf9da"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvmotiondetect"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/on2_md" />

                    <ImageButton
                        android:id="@+id/canselmotiondetect"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:src="@drawable/cancel" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/highlevel"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_below="@+id/motiondetect"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#eee3ff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvhighlevel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
