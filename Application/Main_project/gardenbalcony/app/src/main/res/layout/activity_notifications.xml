                        android:layout_marginTop="30dp"
                        android:background="#00ffffff"
                        android:src="@drawable/cancel" />

                    <ImageView

                        android:id="@+id/imageView4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
