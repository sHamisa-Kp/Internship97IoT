                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#f5e0c4"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvminsoilmoisture_flower"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="23dp"
                        android:src="@drawable/flower2" />

                    <ImageButton
                        android:id="@+id/canselminsoilmoisture_flower"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:src="@drawable/cancel" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/maxsoilmoisture_flower"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_below="@+id/minsoilmoisture_flower"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#f7e9d5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvmaxsoilmoisture_flower"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
