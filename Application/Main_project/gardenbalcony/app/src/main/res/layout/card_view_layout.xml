<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:background="#49bd85"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#49bd85"
        android:id="@+id/relativeLayoutcard"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/humidity_high"
                    android:layout_width="100dp"
                    android:layout_height="105dp"
                    android:layout_gravity="right"
                    android:background="@null"
                    android:src="@drawable/flowers"
                    tools:layout_editor_absoluteX="0dp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintVertical_bias="0.0" />

                <ImageButton
                    android:id="@+id/canselmaxhumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="#00ffffff"
                    android:foregroundGravity="right"
                    android:src="@drawable/right_arrow_notif"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="16dp"
                    card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintVertical_bias="0.493" />

                <TextView
                    android:id="@+id/card_view_title"
                    android:layout_width="358dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="27dp"
                    android:gravity="center"
                    android:text="test view"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>


        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>